#!/usr/bin/env perl

use strict;
use warnings;

use Pulpo;
use Data::Dumper;

Pulpo::Server->new(
               on_request => sub {
                              my($env, $client) = @_;

                              return "Hello World!\n";
                           },
               on_header => sub {
                              my($hdr, $client) = @_;
                              $hdr->{'X-ServerSoftware'} = 'Pulpo ' . $Pulpo::VERSION;
                           },
               on_response => sub {
                              my($hdr, $client, $ret) = @_;

                           }
            )->run;


